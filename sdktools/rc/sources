MAJORCOMP=sdk
MINORCOMP=rc

TARGETNAME=rc
TARGETPATH=obj
TARGETTYPE=PROGRAM

INCLUDES=.\;..\rcdll

SOURCES=rc.c	\
	output.cpp \
        rc.rc

USECXX_FLAG=/TP

UMTYPE=console
UMENTRY=wmain
SUBSYSTEM_VERSION=5.0
TARGETLIBS=..\rcdll\$(O)\rcdll.lib

# Gotta use libcmt because the Win2k msvcrt.dll doesn't support the counted variants
# CRT routines.
!if $(386)
USE_LIBCMT=1
!else
USE_MSVCRT=1
!endif

