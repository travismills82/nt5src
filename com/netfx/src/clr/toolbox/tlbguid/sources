MINORCOMP       = Cool
TARGETNAME      = TlbGuid
TARGETPATH      = $(TARGETCORLIB)\$(TARGET_DIRECTORY)\$(DDKBUILDENV)
TARGETTYPE      = PROGRAM
SOURCES         =
