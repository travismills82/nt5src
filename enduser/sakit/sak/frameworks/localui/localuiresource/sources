TARGETNAME=localuiresource
TARGETPATH=$(SASS_BINDIR)
TARGETTYPE=DYNLINK

DLLENTRY=_DllMainCRTStartup
DLLDEF=localuiresource.def

INCLUDES=\
    $(SASS_INC);\
    $(BASEDIR)\public\sdk\inc\atl30; \
    $(BASEDIR)\public\sdk\inc\crt; \
    $(BASEDIR)\private\inc; \

MIDL_OPTIMIZATION=-Oicf -robust -no_format_opt -error all

USE_STATIC_ATL=1
ATL_VER=30
USE_STL=1
USE_RTTI=1
USE_VCCOM=1
USE_MSVCRT=1

USER_C_FLAGS=/EHsc

C_DEFINES=$(C_DEFINES) -DUNICODE

TARGETLIBS= \
    $(SDK_LIB_PATH)\kernel32.lib  \
    $(SDK_LIB_PATH)\advapi32.lib  \
    $(SDK_LIB_PATH)\user32.lib  \
    $(SDK_LIB_PATH)\ole32.lib  \
    $(SDK_LIB_PATH)\oleaut32.lib  \
    $(SDK_LIB_PATH)\uuid.lib  \
    $(SDK_LIB_PATH)\gdi32.lib  \
    $(SASS_LIB)\satrace.lib \
    $(SASS_LIB)\sauuid.lib \
    $(SASS_LIB)\utils.lib \
    $(SASS_LIB)\debug.lib \
    

SOURCES=\
    LocalUIresource.idl \
        resctrl.cpp  \
        textresctrl.cpp  \
        stdafx.cpp \
        localuiresource.cpp \
    localuiresource.rc
