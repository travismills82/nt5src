;// Common file lists
;/////////////////////////////////////////////////////////////////////////////

[ClusterSystemFiles]
ClusSprt.dll,,,1


[ClusterDriverFiles]
ClusDisk.sys,,,1
ClusNet.sys,,,1


[ClusterFiles]
