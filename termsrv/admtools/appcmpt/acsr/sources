TERMSRV_ROOT = ..\..\..

MAJORCOMP=termsrv
MINORCOMP=acsr

TARGETNAME=acsr
TARGETPATH=obj
TARGETTYPE=LIBRARY

MSC_WARNING_LEVEL=/W3 /WX

SOURCES=acsr.c \
        acsr.rc
INCLUDES=..\inc;$(SHELL_INC_PATH);

!IFDEF NTDEBUG
!IFDEF NOMEMLEAK
C_DEFINES=-DCONDITION_HANDLING=1 -DNOMINMAX -DUNICODE=1
!ELSE
!IFDEF STACK_TRACE
C_DEFINES=-DCONDITION_HANDLING=1 -DNOMINMAX -DMEMLEAK -DSTACK_TRACE -DUNICODE=1
!ELSE
C_DEFINES=-DCONDITION_HANDLING=1 -DNOMINMAX -DMEMLEAK -DUNICODE=1
!ENDIF
!ENDIF
!ELSE   # NTDEBUG
C_DEFINES=-DCONDITION_HANDLING=1 -DNOMINMAX -DUNICODE=1
!ENDIF  # NTDEBUG


UMLIBS=$(O)\acsr.lib \
       $(TERMSRV_LIB_PATH)\syslib.lib \
       $(SDK_LIB_PATH)\user32.lib \
       $(SDK_LIB_PATH)\ntdll.lib

UMRES=$(O)\acsr.res
UMAPPLEXT=.exe
UMAPPL=acsr
UMTYPE=console

PRECOMPILED_INCLUDE=precomp.h
PRECOMPILED_PCH=precomp.pch
PRECOMPILED_OBJ=precomp.obj

USE_MSVCRT=1
