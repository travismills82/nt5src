    share.cxx \
    shrinfo.cxx \
    shrpage.cxx \
    shrpage2.cxx \
    strhash.cxx \
    util.cxx \
    app.rc

PASS0_HEADERDIR = $(O)
PASS0_SOURCEDIR = $(O)

PRECOMPILED_INCLUDE=headers.hxx
PRECOMPILED_CXX=1

